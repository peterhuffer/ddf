<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/blueprint" id="camelContext"/>

    <reference id="metacardOnlyAdapter" interface="org.codice.ddf.catalog.harvest.Adapter"/>

    <cm:managed-service-factory
        id="contentMonitor_MSF"
        factory-pid="org.codice.ddf.catalog.harvest.manager.HarvesterManager"
        interface="org.codice.ddf.catalog.harvest.manager.HarvesterManager">
        <cm:managed-component class="org.codice.ddf.catalog.harvest.manager.HarvesterManager"
                              init-method="init" destroy-method="destroy">
            <argument ref="metacardOnlyAdapter"/>
            <argument ref="camelContext"/>
            <property name="processingMechanism" value="in_place"/>
            <property name="numThreads" value="1"/>
            <property name="readLockIntervalMilliseconds" value="500"/>
            <property name="monitoredLocation" value=""/>
            <property name="attributeOverrides">
                <list/>
            </property>
            <cm:managed-properties persistent-id=""
                                   update-strategy="component-managed"
                                   update-method="updateCallback"/>
        </cm:managed-component>

    </cm:managed-service-factory>
</blueprint>